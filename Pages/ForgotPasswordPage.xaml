<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HiatMeApp.ForgotPasswordPage"
             Title="{Binding Title}">
    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="Forgot Password" FontSize="24" HorizontalOptions="Center" />
        <Label Text="Enter your email to receive a reset link." />
        <Entry Placeholder="Email" Text="{Binding Email}" />
        <Button Text="Send Reset Link" Command="{Binding SendResetCommand}" />
        <Button Text="Back to Login" Command="{Binding GoToLoginCommand}" />
        <Label Text="{Binding Message}" TextColor="Red" HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>